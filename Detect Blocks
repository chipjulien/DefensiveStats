def detect_block(ball_positions, defender_positions, block_threshold=1.0):
    predicted_trajectory = np.polyfit(ball_positions[:, 0], ball_positions[:, 1], 2)
    actual_positions = np.array(ball_positions)
    deviation = np.abs(np.polyval(predicted_trajectory, actual_positions[:, 0]) - actual_positions[:, 1])
    if np.any(deviation > block_threshold):
        # Check proximity to defenders
        for defender_pos in defender_positions:
            if np.linalg.norm(defender_pos - ball_positions[-1]) < block_threshold:
                return True
    return False
